{
  "name": "react-native-sqlite3",
  "version": "7.0.0",
  "description": "SQLite3 bindings for React Native (Android & iOS)",
  "author": "Mendix, Andrzej Porebski",
  "license": "MIT",
  "types": "sqlite.d.ts",
  "bugs": {
    "url": "https://github.com/vadim-v/react-native-sqlite3/issues"
  },
  "homepage": "https://github.com/vadim-v/react-native-sqlite3",
  "main": "sqlite.js",
  "scripts": {
    "test": "echo \"Error: no test specified yet\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mendix/react-native-sqlite-storage.git"
  },
  "keywords": [
    "react-native-sqlite3",
    "react-component",
    "reactnative",
    "react-native",
    "sqlite",
    "sqlite3",
    "ios",
    "android",
    "promise"
  ],
  "files": [
    "lib/*",
    "platforms/*",
    "react-native.config.js",
    "react-native-sqlite3.podspec",
    "LICENCE"
  ],
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "devDependencies": {
    "react": "18.2.0",
    "react-native": "0.72.10"
  },
  "overrides": {
    "@types/react": "^18.2.44"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "arrowParens":"always",
    "semi": true,
    "endOfLine": "lf"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": false,
      "allowSameVersion": false
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  }
